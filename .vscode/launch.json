{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "myWorld",
      "program": "${workspaceFolder}/app.js",
      "console": "integratedTerminal",
      "restart": true,
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "nodemon",
      "env": {
        "NODE_ENV": "dev"
      },
      "sourceMaps": true,
      // "cwd": "${workspaceFolder}",
      // "preLaunchTask": "build" // Optional, if you have a build task
    }
  ]
}
